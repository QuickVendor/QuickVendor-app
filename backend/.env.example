# QuickVendor Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/quickvendor

# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secure-secret-key-32-characters-minimum

# Application Environment
ENVIRONMENT=development

# Sentry Configuration
SENTRY_DSN=https://your-dsn@your-org.ingest.sentry.io/your-project-id
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: Internal secret key for feedback endpoint security
# If not set, the endpoint will be open (with rate limiting only)
FEEDBACK_SECRET_KEY=your-internal-secret-key-here

# For production on Render, set:
# ENVIRONMENT=production
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1
# FRONTEND_URL=https://your-frontend-url.onrender.com
